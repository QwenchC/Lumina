# Lumina 明见量化 - 环境变量配置

# ============ LLM API 配置 ============
# GitHub Models (推荐 - 免费)
GITHUB_TOKEN=your_github_personal_access_token

# OpenAI (可选)
OPENAI_API_KEY=your_openai_api_key
OPENAI_BASE_URL=https://api.openai.com/v1

# DeepSeek (可选)
DEEPSEEK_API_KEY=your_deepseek_api_key

# Azure OpenAI (可选)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com

# ============ 数据源配置 ============
# Tushare Pro (可选，获取更全面的数据)
TUSHARE_TOKEN=your_tushare_pro_token

# ============ 数据库配置 ============
# SQLite (默认)
DATABASE_URL=sqlite:///./data/lumina.db

# PostgreSQL (可选，生产环境推荐)
# DATABASE_URL=postgresql://user:password@localhost:5432/lumina

# ============ Redis 配置 (可选) ============
REDIS_URL=redis://localhost:6379/0

# ============ 服务配置 ============
# 后端服务
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# 前端服务
FRONTEND_PORT=5173

# ============ 交易配置 ============
# 初始资金 (人民币)
INITIAL_CAPITAL=1000000

# 交易模式: simulation / live
TRADING_MODE=simulation

# 单只股票最大持仓比例
MAX_POSITION_RATIO=0.2

# 最大持股数量
MAX_HOLDINGS=10

# 止损比例
STOP_LOSS_RATIO=0.08

# 止盈比例
TAKE_PROFIT_RATIO=0.20

# ============ LLM 决策配置 ============
# 默认模型
DEFAULT_LLM_MODEL=openai/gpt-4.1-mini

# 决策间隔 (秒)
DECISION_INTERVAL=3600

# 每日最大交易次数
MAX_DAILY_TRADES=10

# ============ 日志配置 ============
LOG_LEVEL=INFO
LOG_FILE=./logs/lumina.log

# ============ 安全配置 ============
# API 密钥 (用于前端认证)
API_SECRET_KEY=your_secret_key_here
